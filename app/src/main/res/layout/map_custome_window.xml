<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:background="@color/waterFill"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/water"
            android:src="@drawable/ic_refill"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/locTitle"
                android:text="@string/app_name"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/whiteText"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="100"
                android:padding="5dp"
                tools:ignore="InefficientWeight">

                <TextView
                    android:id="@+id/upVotes1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="65"
                    android:ellipsize="end"
                    android:maxLines="10"
                    android:text="@string/app_name"
                    android:textAlignment="textEnd"
                    android:textColor="@color/whiteText"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    tools:ignore="NestedWeights,RtlCompat,UnusedAttribute"
                    android:paddingHorizontal="5dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/thumbUp"
                    android:src="@drawable/ic_thumb_up"
                    android:layout_weight="75" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/thumbDown"
                    android:src="@drawable/ic_thumb_down"
                    android:layout_weight="75" />

                <TextView
                    android:id="@+id/downVotes1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="65"
                    android:ellipsize="end"
                    android:maxLines="10"
                    android:text="@string/app_name"
                    android:textAlignment="viewStart"
                    android:textColor="@color/whiteText"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    tools:ignore="RtlCompat,UnusedAttribute"
                    android:paddingHorizontal="5dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>