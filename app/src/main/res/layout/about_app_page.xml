<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About_App_Page"
    android:background="@color/whiteText">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Our Aim -->

        <TextView
            android:id="@+id/abApp_AimSubHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/audiowide"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:text="@string/abApp_AimSubHead"
            android:textAlignment="center"
            android:textColor="@color/pureBlack"
            android:textSize="36sp"
            android:visibility="visible" />

        <View
            android:id="@+id/divider"
            android:layout_width="160dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/pureBlack"
            android:visibility="visible" />

        <TextView
            android:id="@+id/abApp_AimMainText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:text="@string/abApp_AimMainText"
            android:textAlignment="center"
            android:textColor="@color/pureBlack"
            android:textSize="20sp" />

        <!-- Our App -->

        <TextView
            android:id="@+id/abApp_AppSubHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/audiowide"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:text="@string/abApp_AppSubHead"
            android:textAlignment="center"
            android:textColor="@color/pureBlack"
            android:textSize="35sp"
            android:visibility="visible" />

        <View
            android:id="@+id/divider1"
            android:layout_width="160dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/pureBlack"
            android:visibility="visible" />

        <TextView
            android:id="@+id/abApp_WhyUsMainText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:text="@string/abApp_AppMainText"
            android:textAlignment="center"
            android:textColor="@color/pureBlack"
            android:textSize="20sp" />

        <!-- Socials -->

        <TextView
            android:id="@+id/abApp_SocialSubHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/audiowide"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:text="@string/abApp_SocialSubHead"
            android:textAlignment="center"
            android:textColor="@color/pureBlack"
            android:textSize="35sp"
            android:visibility="visible" />

        <View
            android:id="@+id/divider2"
            android:layout_width="225dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/pureBlack"
            android:visibility="visible" />

        <TextView
            android:id="@+id/abApp_SocialMainText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:text="@string/abApp_SocialMainText"
            android:textAlignment="center"
            android:textColor="@color/pureBlack"
            android:textSize="20sp" />


    </LinearLayout>

</ScrollView>